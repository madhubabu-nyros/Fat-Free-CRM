.standalone.login#standalone
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    .title= t(:forgot_password)
    .intro= t(:password_intro)
    .section
      .label= t(:email)
      = f.input_field :email, required: true, autofocus: true, class: "form-control", placeholder: "Enter your email"
    %br
    .buttonbar
      = f.button :submit, t(:reset_password), id: 'passwords_submit', class: "btn btn-info", style: "width: 361px;"
